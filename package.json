{
  "name": "@eropple/twitch-better-api",
  "version": "0.1.0",
  "main": "dist",
  "repository": "https://github.com/eropple/twitch-better-api",
  "author": "Ed Ropple <ed@edropple.com>",
  "license": "AGPL-3.0",
  "dependencies": {
    "@types/bunyan": "^1.8.4",
    "@types/joi": "^13.4.0",
    "@types/lodash": "^4.14.115",
    "@types/qs": "^6.5.1",
    "axios": "^0.17.1",
    "bunyan": "^1.8.12",
    "deep-freeze-es6": "^1.0.1",
    "eventemitter2": "^5.0.1",
    "joi": "^13.1.0",
    "lodash": "^4.17.4",
    "qs": "^6.5.1",
    "set-manipulator": "^0.3.1"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "scripts": {
    "build": "yarn exec tsc",
    "clean": "rm -rf dist",
    "#precommit": "npm run test",
    "#prepush": "npm run test",
    "test": "source ./env_test_secrets.bash && yarn exec tslint --project . && yarn exec jest",
    "watch": "yarn exec tsc --watch --preserveWatchOutput"
  },
  "devDependencies": {
    "@types/jest": "23.3.0",
    "husky": "0.14",
    "jest": "^22.0",
    "jest-environment-node": "^22.0.6",
    "ts-jest": "22.4.1",
    "tslint": "5.9.1",
    "typescript": "2.8.4"
  },
  "jest": {
    "globals": {
      "__DEV__": true,
      "__TEST__": true
    },
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globalSetup": "./dist/testSetup",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
