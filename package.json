{
  "name": "@eropple/twitch-better-api",
  "version": "0.1.0",
  "main": "dist",
  "repository": "git@github.com:eropple/twitch-helix-api",
  "author": "Ed Ropple <ed@edropple.com>",
  "dependencies": {
    "axios": "^0.17.1",
    "deep-freeze-es6": "^1.0.1",
    "eventemitter2": "^5.0.1",
    "is-in-browser": "^1.1.3",
    "joi": "^13.1.0",
    "lodash": "^4.17.4",
    "qs": "^6.5.1",
    "set-manipulator": "^0.3.1"
  },
  "license": "AGPL-3.0",
  "engines": {
    "node": ">= 8.0.0"
  },
  "scripts": {
    "console": "babel-node",
    "lint": "yarn exec eslint src",
    "test": "yarn lint && . ./env_test_secrets.bash && jest",
    "build": "babel --copy-files src -d dist",
    "watch": "babel --watch --copy-files src -d dist",
    "clean": "rm -rf dist",
    "precommit": "npm run test",
    "prepush": "npm run test"
  },
  "peerDependencies": {
    "bunyan": "~1.8"
  },
  "devDependencies": {
    "babel-cli": "^6.0.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^21.0.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "bunyan": "^1.8.12",
    "eslint": "^4.15.0",
    "jest": "^22.0.6"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "8.0.0"
          }
        }
      ]
    ],
    "plugins": [
      [
        "transform-class-properties",
        {
          "spec": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [],
    "plugins": [],
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true
      }
    },
    "env": {
      "es6": true,
      "jest": true
    },
    "rules": {
      "arrow-parens": [
        "error",
        "always"
      ],
      "class-methods-use-this": "off",
      "comma-dangle": [
        "error",
        "never"
      ],
      "import/prefer-default-export": "off",
      "max-len": [
        "warn",
        100
      ],
      "no-console": "off",
      "no-else-return": "off",
      "no-empty-function": "off",
      "no-underscore-dangle": "off",
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_",
          "argsIgnorePattern": "^_"
        }
      ],
      "no-useless-constructor": "off",
      "space-before-function-paren": "off",
      "quotes": "off"
    }
  },
  "jest": {
    "globals": {
      "__DEV__": true,
      "__TEST__": true
    },
    "globalSetup": "./dist/testSetup",
    "testPathIgnorePatterns": [
      "<rootDir>/src"
    ]
  }
}
